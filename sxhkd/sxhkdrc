#################################################################
# SUPER + ... KEYS
#################################################################

#rofi
super + d
   rofi -show drun

#term
super + Return
  wezterm 

#term float
super + shift + Return
	bspc rule -a wezterm -o state=floating follow=on center=true rectangle=490x310+0+0 && wezterm 

#firefox
super + w
	firefox

super + f
  wezterm start joshuto 


#################################################################
# SUPER + SHIFT KEYS
#################################################################

#rofi
super + d
    ~/.config/bspwm/launcher/launcher.sh

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd


